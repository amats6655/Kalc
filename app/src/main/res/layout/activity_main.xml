<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hystory_view"
            android:layout_width="386dp"
            android:layout_height="250sp"
            android:layout_marginHorizontal="27sp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/res_view"
            android:layout_width="388dp"
            android:layout_height="100sp"
            android:layout_marginHorizontal="27sp"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="50sp"
            android:gravity="bottom">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/b_7"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_7" />

                <Button
                    android:id="@+id/b_8"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_8" />

                <Button
                    android:id="@+id/b_9"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_9" />

                <Button
                    android:id="@+id/b_mult"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/multy" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/b_4"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_4" />

                <Button
                    android:id="@+id/b_5"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_5" />

                <Button
                    android:id="@+id/b_6"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_6" />

                <Button
                    android:id="@+id/b_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/minus" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/b_1"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_1" />

                <Button
                    android:id="@+id/b_2"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_2" />

                <Button
                    android:id="@+id/b_3"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_3" />

                <Button
                    android:id="@+id/b_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/plus" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/b_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/dot" />

                <Button
                    android:id="@+id/b_0"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/_0" />

                <Button
                    android:id="@+id/b_div"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/div" />

                <Button
                    android:id="@+id/b_equals"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="@string/eq" />
            </TableRow>
        </TableLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>