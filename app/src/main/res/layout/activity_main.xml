<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hystory_view"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="1+1=3\n1+1+1=7\n1+1+1+1=15\n1+1+1+1+1=31\n1+1+1+1+1+1=63\n1+1+1+1+1+1+1=127" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:id="@+id/res_view"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:text="1+1=3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="50sp"
            android:gravity="bottom">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="7" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="8" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="9" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="Button2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="4" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="5" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="6" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="Button1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="1" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="2" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="3" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="." />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="0" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="11" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:insetLeft="5sp"
                    android:insetRight="5sp"
                    android:text="=" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>